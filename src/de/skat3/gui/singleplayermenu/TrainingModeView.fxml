<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="480.0" prefWidth="500.0"
	style="-fx-background-color: #FFFFFF; -fx-border-color: #000000;"
	xmlns="http://javafx.com/javafx/9.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="de.skat3.gui.singleplayermenu.TrainingModeController">
	<children>
		<VBox alignment="CENTER" layoutX="120.0" layoutY="99.5"
			spacing="10.0" AnchorPane.leftAnchor="20.0"
			AnchorPane.rightAnchor="20.0">
			<children>
				<Label text="Skat Basic" textFill="#456990" underline="true">
					<font>
						<Font name="System Bold" size="30.0" />
					</font>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
				</Label>
				<Button mnemonicParsing="false" onAction="#startSkatBasic"
					style="-fx-background-color: #114B5F;" text="Skat Basic"
					textFill="WHITE">
					<font>
						<Font name="System Bold" size="15.0" />
					</font>
				</Button>
				<Label text="Strategies" textFill="#456990" underline="true">
					<font>
						<Font name="System Bold" size="30.0" />
					</font>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
					<padding>
						<Insets top="15.0" />
					</padding>
				</Label>
				<Button mnemonicParsing="false"
					onAction="#startTrumpMonopoly"
					style="-fx-background-color: #114B5F;" text="Trump Monopoly"
					textFill="WHITE">
					<font>
						<Font name="System Bold" size="15.0" />
					</font>
				</Button>
				<Button mnemonicParsing="false" onAction="#startPressTheSkat"
					style="-fx-background-color: #114B5F;"
					text="Importance of Trump Cards" textFill="WHITE">
					<font>
						<Font name="System Bold" size="15.0" />
					</font>
				</Button>
				<Button mnemonicParsing="false"
					onAction="#startOfferPointsForTeamPlayer"
					style="-fx-background-color: #114B5F;"
					text="Offer points for team players" textFill="WHITE">
					<font>
						<Font name="System Bold" size="15.0" />
					</font>
				</Button>
				<Button mnemonicParsing="false"
					onAction="#startPlayShortToFriend"
					style="-fx-background-color: #114B5F;"
					text="Play short to your friend" textFill="WHITE">
					<font>
						<Font name="System Bold" size="15.0" />
					</font>
				</Button>
				<Button mnemonicParsing="false"
					onAction="#startPlayLongToEnemy"
					style="-fx-background-color: #114B5F;"
					text="Play long to the enemy" textFill="WHITE">
					<font>
						<Font name="System Bold" size="15.0" />
					</font>
				</Button>
			</children>
		</VBox>
		<Pane layoutY="-1.0" prefHeight="86.0" prefWidth="602.0"
			style="-fx-background-color: #404040;" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<Label layoutX="139.0" layoutY="18.0" text="Training Mode"
					textFill="WHITE">
					<font>
						<Font size="34.0" />
					</font>
				</Label>
				<Button layoutX="449.0" layoutY="24.0"
					mnemonicParsing="false" onAction="#close"
					style="-fx-background-color: d60202;" text="X" textFill="WHITE">
					<font>
						<Font size="18.0" />
					</font>
				</Button>
			</children>
		</Pane>
	</children>
</AnchorPane>
